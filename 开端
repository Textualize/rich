def cycle():
        
    print("你采取的措施是：")
    print("A.不作为")
    print("B.想办法下车")
    print("C.呆在车上找出凶手")
    print("D.正常到站下车")
    print("E.想办法让所有人都下车")
    print("F.强抢高压锅")
    print("G.质问司机")
    print("H.联系警察")
    action_0 = input("请输入：") 
    if action_0 == "A":
        result_1()
    if action_0 == "B":
        result_2()
    if action_0 == "C":
        result_3()
    if action_0 == "D":
        result_4()    
    if action_0 == "E":
        result_5()
    if action_0 == "F":
        result_6()        
    if action_0 == "G":
        result_7()        
    if action_0 == "H":
        result_8()        
        
        
        
